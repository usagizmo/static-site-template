{
  "name": "static-site-template",
  "version": "0.7.2",
  "repository": "ssh://git@github.com/usagizmo/static-site-template.git",
  "author": "usagizmo <usagizmo@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "format": "prettier --write .",
    "build:tailwind": "cross-env NODE_ENV=production tailwindcss -i ./tailwind.css -o ./src/public/styles.css --minify",
    "build": "concurrently \"yarn:build:tailwind\"",
    "dev:tailwind": "tailwindcss -i ./tailwind.css -o ./src/public/styles.css --watch --minify",
    "dev:browser-sync": "browser-sync src/public -w --startPath /",
    "dev": "concurrently \"yarn:dev:tailwind\" \"yarn:dev:browser-sync\"",
    "lint:html": "htmlhint \"src/public/**/*.html\"",
    "lint:js": "eslint . --ext .js",
    "lint": "concurrently \"yarn:lint:html\" \"yarn:lint:js\"",
    "test": "jest",
    "deploy": "rsync -ahvu --delete --exclude=\".*\" dist/ <SSH_HOST>:/var/www/html/"
  },
  "lint-staged": {
    "*.js": [
      "eslint --cache",
      "prettier --write"
    ],
    "*.html": [
      "htmlhint",
      "prettier --write"
    ],
    "*": "prettier --write --ignore-unknown"
  },
  "devDependencies": {
    "browser-sync": "^2.27.5",
    "concurrently": "^6.2.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "htmlhint": "^0.15.1",
    "husky": "^7.0.2",
    "jest": "^27.1.1",
    "lint-staged": "^11.1.2",
    "prettier": "^2.4.0",
    "tailwindcss": "^2.2.15"
  }
}

{
  "name": "static-site-template",
  "version": "1.0.0",
  "repository": "ssh://git@github.com/usagizmo/static-site-template.git",
  "author": "usagizmo <usagizmo@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "format": "prettier --write .",
    "dev": "browser-sync public/ -w --startPath index.html",
    "dev:ignore-css": "browser-sync public/ -w --ignore \"**/*.css\" --startPath index.html",
    "lint:html": "htmlhint **/*.html",
    "lint:css": "stylelint --cache **/*.css",
    "lint:css:fix": "stylelint --cache **/*.css --fix",
    "lint:js": "eslint --cache **/*.js",
    "lint:js:fix": "eslint --cache **/*.js --fix",
    "lint": "npm-run-all -p lint:html lint:css lint:js",
    "lint:fix": "npm-run-all -p lint:html lint:css:fix lint:js:fix -s format",
    "deploy": "rsync -ahvu --delete --exclude=\".*\" public/ <SSH_HOST>:/var/www/html/"
  },
  "lint-staged": {
    "**/*.html": "htmlhint",
    "**/*.js": "eslint --cache --fix",
    "**/*.css": "stylelint --cache --fix --allow-empty-input",
    "*": "pretty-quick --staged"
  },
  "devDependencies": {
    "browser-sync": "^2.26.13",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "htmlhint": "^0.14.2",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "stylelint": "^13.12.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^21.0.0",
    "stylelint-prettier": "^1.2.0"
  }
}

{
  "name": "static-site-template",
  "version": "1.0.0",
  "repository": "ssh://git@github.com/usagizmo/static-site-template.git",
  "author": "usagizmo <usagizmo@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "format": "prettier --write .",
    "dev": "browser-sync public/ -w --startPath index.html",
    "dev:ignore-css": "browser-sync public/ -w --ignore \"**/*.css\" --startPath index.html",
    "lint": "eslint --cache **/*.js --fix & stylelint --cache **/*.css --fix",
    "deploy": "rsync -ahvu --delete --exclude=\".*\" public/ <SSH_HOST>:/var/www/html/"
  },
  "lint-staged": {
    "**/*.js": "eslint --cache --fix --allow-empty-input",
    "**/*.css": "stylelint --cache --fix --allow-empty-input",
    "*": "pretty-quick --staged"
  },
  "devDependencies": {
    "browser-sync": "^2.26.13",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^5.1.3",
    "lint-staged": ">=10",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "stylelint": "^13.12.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^21.0.0",
    "stylelint-prettier": "^1.2.0"
  }
}

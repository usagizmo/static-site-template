{
  "name": "static-site-template",
  "version": "0.13.1",
  "repository": "ssh://git@github.com/usagizmo/static-site-template.git",
  "author": "usagizmo <usagizmo@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "format": "prettier --write .",
    "build:tailwind": "cross-env NODE_ENV=production tailwindcss -i ./src/css/styles.css -o ./src/public/styles.css --minify",
    "build:js": "cross-env NODE_ENV=production rollup --config",
    "build": "run-p build:*",
    "clean": "./commands/remove-unused-images.sh",
    "dev:tailwind": "tailwindcss -i ./src/css/styles.css -o ./src/public/styles.css --watch",
    "dev:js": "rollup --config -w",
    "dev:server": "five-server src/public/",
    "dev": "run-p dev:*",
    "lint:html": "htmlhint \"src/public/**/*.html\"",
    "lint:js": "eslint . --ext .js",
    "lint": "run-p lint:*",
    "test:debug": "cross-env NODE_ENV=debug jest",
    "test": "jest",
    "deploy": "rsync -ahvu --delete --exclude=\".*\" src/public/ <SSH_HOST>:/var/www/html/"
  },
  "lint-staged": {
    "*.js": [
      "eslint --cache",
      "prettier --write"
    ],
    "*.html": [
      "htmlhint",
      "prettier --write"
    ],
    "*": "prettier --write --ignore-unknown"
  },
  "devDependencies": {
    "@rollup/plugin-eslint": "8.0.1",
    "autoprefixer": "10.4.2",
    "cross-env": "7.0.3",
    "eslint": "8.9.0",
    "eslint-config-prettier": "8.3.0",
    "five-server": "0.1.3",
    "htmlhint": "1.1.2",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "lint-staged": "12.3.4",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.6",
    "prettier": "2.5.1",
    "prettier-plugin-tailwindcss": "0.1.7",
    "rollup": "2.67.3",
    "tailwindcss": "3.0.23"
  },
  "peerDependencies": {
    "autoprefixer": "10.4.2",
    "postcss": "8.4.6"
  }
}

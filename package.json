{
  "name": "static-site-template",
  "version": "0.9.0",
  "repository": "ssh://git@github.com/usagizmo/static-site-template.git",
  "author": "usagizmo <usagizmo@gmail.com>",
  "license": "MIT",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "format": "prettier --write .",
    "build:tailwind": "cross-env NODE_ENV=production tailwindcss -i ./tailwind.css -o ./src/public/styles.css --minify",
    "build": "concurrently \"pnpm:build:tailwind\"",
    "dev:tailwind": "tailwindcss -i ./tailwind.css -o ./src/public/styles.css --watch --minify",
    "dev:browser-sync": "browser-sync src/public -w --startPath /",
    "dev": "concurrently \"pnpm:dev:tailwind\" \"pnpm:dev:browser-sync\"",
    "lint:html": "htmlhint \"src/public/**/*.html\"",
    "lint:js": "eslint . --ext .js",
    "lint": "concurrently \"pnpm:lint:html\" \"pnpm:lint:js\"",
    "test:debug": "cross-env NODE_ENV=debug jest",
    "test": "jest",
    "deploy": "rsync -ahvu --delete --exclude=\".*\" src/public/ <SSH_HOST>:/var/www/html/"
  },
  "lint-staged": {
    "*.js": [
      "eslint --cache",
      "prettier --write"
    ],
    "*.html": [
      "htmlhint",
      "prettier --write"
    ],
    "*": "prettier --write --ignore-unknown"
  },
  "devDependencies": {
    "browser-sync": "^2.27.7",
    "concurrently": "^6.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "htmlhint": "^0.15.2",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lint-staged": "^11.2.6",
    "prettier": "^2.4.1",
    "tailwindcss": "^3.0.0-alpha.2"
  }
}

{
  "root": true,
  "env": {
    "browser": true,
    "es2015": true
  },
  "extends": ["eslint:recommended", "plugin:import/recommended", "prettier"],
  "parserOptions": {
    "sourceType": "module"
  },
  "globals": {
    "gsap": true,
    "ScrollTrigger": true,
    "ScrollToPlugin": true
  },
  "rules": {
    "import/order": [
      "error",
      {
        "alphabetize": {
          "order": "asc"
        }
      }
    ]
  }
}
